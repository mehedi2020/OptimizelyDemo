@model IPageViewModel<SitePageData>
      <!-- FOOTER -->
<footer class="grid">
    <!-- Footer - top -->
    <!-- Image-->
    <div class="s-12 l-3 m-row-3 margin-bottom background-image" style="background-image:url(img/img-04.jpg)"></div>

    <div class="s-12 m-9 l-3 padding-2x margin-bottom background-dark">
        <h2 class="text-strong text-uppercase">@Model.Layout.BrickerFooterBlock.FooterTitle</h2>
        <p>@Model.Layout.BrickerFooterBlock.FooterDescription</p>
    </div>

    <div class="s-12 m-9 l-3 padding-2x margin-bottom background-dark">
        <h2 class="text-strong text-uppercase">@Model.Layout.BrickerFooterBlock.FooterTitle</h2>
        <img class="full-img" src="@Url.ContentUrl(Model.Layout.BrickerFooterBlock.FooterMap)" alt="@Model.Layout.BrickerFooterBlock.FooterTitle" />
    </div>

    <div class="s-12 m-9 l-3 padding-2x margin-bottom background-dark">
        <h2 class="text-strong text-uppercase">@Model.Layout.BrickerFooterBlock.FooterContactUS</h2>
        <p><b class="text-primary margin-right-10">P</b> @Model.Layout.BrickerFooterBlock.FooterContactUSPhone</p>
        <p><b class="text-primary margin-right-10">M</b> <a class="text-primary-hover" href="mailto:'@Model.Layout.BrickerFooterBlock.FooterContactUSEmail1'">@Model.Layout.BrickerFooterBlock.FooterContactUSEmail1</a></p>
        <p><b class="text-primary margin-right-10">M</b> <a class="text-primary-hover" href="mailto:'@Model.Layout.BrickerFooterBlock.FooterContactUSEmail2'">@Model.Layout.BrickerFooterBlock.FooterContactUSEmail2</a></p>
    </div>

    <!-- Footer - bottom -->
    <div class="s-12 text-center margin-bottom">
        <p class="text-size-12">@Model.Layout.BrickerFooterBlock.FooterCopyWriteTitle</p>
        <p class="text-size-12">@Model.Layout.BrickerFooterBlock.FooterCopyWriteDescription</p>
        <p><a class="text-size-12 text-primary-hover" href="http://www.myresponsee.com" title="Responsee - lightweight responsive framework">Design and coding by Responsee Team</a></p>
    </div>
</footer> 